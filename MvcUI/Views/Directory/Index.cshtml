@model IEnumerable<Entities.Concrete.Directory>
@{
    ViewData["Title"] = "Index";
}

<h1>Kişiler</h1>
<a class="btn btn-primary mb-3" asp-action="Add">Kişi Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>#Id</td>
            <td>İsim</td>
            <td>Soyisim</td>
            <td>Şirket</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DirectoryId</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Company</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.DirectoryId" class="badge badge-success">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.DirectoryId" class="badge badge-danger">Sil</a>
                    <a asp-controller="ContactInfo" asp-action="Add" asp-route-id="@item.DirectoryId" class="badge badge-primary">İletişim Bilgisi Ekle</a>
                    <a asp-controller="ContactInfo" asp-action="GetDirectoryDetailDto" asp-route-id="@item.DirectoryId" class="badge badge-primary">Detay Getir</a>
                </td>
            </tr>
        }
    </tbody>
</table>